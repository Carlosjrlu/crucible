<div class="description">
    {{{source.system.description}}}
</div>

{{#if actions.length}}
    <section class="actions">
    <h3 class="divider">
        <span></span><label>Actions</label><span></span>
    </h3>
    {{#each actions as |action|}}
    <div class="action" data-action-id="{{this.id}}">
        <div class="action-header line-item">
            <div class="name flexrow">
                <img class="icon" src="{{action.img}}" title="{{action.name}}"/>
                <h4>{{action.name}}</h4>
            </div>
            <div class="action-tags">
                {{#each action.tags as |tags section|}}
                    <div class="tags" data-tag-type="{{section}}">
                        {{#each tags as |label tag|}}
                            <span class="tag" data-tag="{{tag}}">{{label}}</span>
                        {{/each}}
                    </div>
                {{/each}}
            </div>
        </div>
        {{#if action.condition}}
            <p class="condition">
                <strong>{{localize "ACTION.Condition"}}:</strong> <em>{{action.condition}}</em>
            </p>
        {{/if}}
        <div class="description">{{{action.description}}}</div>
        {{#if action.effects.length}}
            <ol class="effects"></ol>
            {{#each action.effects as |effect|}}
                <li class="effect line-item">
                    <div class="name">Causes Effect: {{action.name}}</div>
                    <div class="tags">
                        {{#each effect.tags as |label tag|}}
                            <span class="tag" data-tag="{{tag}}">{{label}}</span>
                        {{/each}}
                    </div>
                </li>
            {{/each}}
            </li>
        {{/if}}
    </div>
    {{/each}}
</section>
{{/if}}
