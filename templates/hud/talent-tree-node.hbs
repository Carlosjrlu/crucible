<aside id="crucible-talent-hud" class="app crucible">
    <header id="talent-hud-header" class="flexcol">
        <div class="tags">
            <label>Node:</label>
            <span class="tag">Tier {{node.tier}}</span>
            <span class="tag">{{node.type}}</span>
            <span class="tag">{{node.talents}} Talents</span>
        </div>
        <div class="tags">
            <label>Prerequisites:</label>
            {{#each prerequisites as |tag|}}
                <span class="tag">{{tag}}</span>
            {{/each}}
        </div>
    </header>
</aside>
